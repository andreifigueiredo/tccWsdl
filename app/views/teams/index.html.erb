<h1>Equipes</h1>

<table class="responsive nowrap table table-hover" id="all_teams" data-sort="true">
  <thead>
    <tr>
      <th data-data="name">Name</th>
      <th data-data="project">Project</th>
    </tr>
  </thead>
    <% @teams.each do |team|%>
      <tr>
        <td><%= team.name %></td>
        <td><%= team.project.name %></td>
        <td><%= link_to 'Detalhes', team %></td>
      </tr>
    <% end %>

</table>

<br>

<%= link_to 'Nova Equipe', new_team_path %> |
<%= link_to 'Home', root_path %>

<script>
  $(document).ready( function () {
    $('#all_teams').DataTable();
  } );
</script>