<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @team.name %>
</p>

<p>
  <strong>Project:</strong>
  <%= @team.project.name %>
</p>

<p>
  <strong>Desenvolvedores:</strong>
  <table class="responsive nowrap table table-hover" id="all_devs" data-sort="true">
  <thead>
    <tr>
      <th data-data="email">Email</th>
      <th></th>
    </tr>
  </thead>
    <% @team.developers.each do |developer|%>
      <tr>
        <td><%= developer.email %></td>
        <td><%= link_to 'Detalhes', developer %></td>
      </tr>
    <% end %>

</table>
</p>

<%= link_to 'Edit', edit_team_path(@team) %> |
<%= link_to 'Back', teams_path %>

<script>
  $(document).ready( function () {
    $('#all_devs').DataTable();
  } );
</script>