<% if developer_signed_in? %>
  <div class="vertical-menu">
    <%= link_to t('projects'), projects_path %>
    <% if current_developer.team.present? && current_developer.team.project.present? %>
      <%= link_to t('myProject'), project_path(current_developer.team.project) %>
    <% end %>
