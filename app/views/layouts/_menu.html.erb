      <%= link_to t('createNewProject'), new_project_path %>
    <% end %>
  </div>
<% end %>
<% if developer_signed_in? && current_developer.admin %>
  <div class="breakitem"></div>
  <div class="vertical-menu">
    <%= link_to t('teams'), teams_path %>
    <%= link_to t('createTeam'), new_team_path %>
  </div> 
<% end %>
<% if developer_signed_in? && current_developer.admin %>
  <div class="breakitem"></div>
  <div class="vertical-menu">               
    <%= link_to t('developers'), developers_path %>
    <%= link_to t('inviteDeveloper'), new_developer_invitation_path %>
  </div>
<% end %>
