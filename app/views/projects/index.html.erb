<h1>Projects</h1>

<table class="responsive nowrap table table-hover" id="all_projects" data-sort="true">
  <thead>
    <tr>
      <th data-data="name">Name</th>
      <th></th>
    </tr>
  </thead>
    <% @projects.each do |project|%>
      <tr>
        <td><%= project.name %></td>
        <td><%= link_to 'Detalhes', project %></td>
      </tr>
    <% end %>

</table>

<br>

<%= link_to 'Novo Projeto', new_project_path %> |
<%= link_to 'Home', root_path %>

<script>
  $(document).ready( function () {
    $('#all_projects').DataTable();
  } );
</script>